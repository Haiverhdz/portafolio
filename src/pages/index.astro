---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import Tecnologys from "@/components/Tecnologys.astro"
---

<Layout
  title="Porfolio de Haiver - Desarrollador y Programador Web"
  description="Contrata a Haiver Hernandez para crear tu sitio web o aplicación. Desarrollador Web Fullstack. Apasionado por construir soluciones modernas y funcionales. Especializado en React, Node.js y MongoDB."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">

    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="Tecnologys">
      <TitleSection>
      </TitleSection>
      <Tecnologys />
    </SectionContainer>
  </div>
  </main>
</Layout>
