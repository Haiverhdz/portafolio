---
const images = [
  "/fullstack.png", 
  "/desarrolloWeb.png",
  "/javaScript.png",
  "/react.png",
  "/backend1.png",
  "/backendII.png",
  "/backendIII.png"
];
---

<section class="py-12 bg-black/10">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center text-white-800 mb-10">
    🏆 Certificaciones
    </h2>

    <div class="flex justify-center mb-12">
      <img
        src={images[0]}
        alt="Certificación principal"
        class="w-full h-auto rounded-lg shadow-md transform transition-transform duration-300 hover:scale-105"
      />
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 gap-6">
      {images.slice(1).map((img, i) => (
        <div class="flex justify-center">
          <img
            src={img}
            alt={`Certificación ${i + 2}`}
            class="w-full h-auto rounded-lg shadow-md transform transition-transform duration-300 hover:scale-125"
          />
        </div>
      ))}
    </div>
  </div>
</section>
